# Arguments:
#	The first argument is passed to runAllScrapers.phpb.

BASEDIR=/home/diary2
RAPPER=/usr/local/bin/rapper

cd $BASEDIR/bin

# Run all of the scrapers.
php runAllScrapers.phpb $1

# Combine all of the output into a single file (after passing it through rapper).
cat $BASEDIR/var/output/* | $RAPPER -e -q -i turtle - -I null -o turtle -O http://id.southampton.ac.uk/ > $BASEDIR/htdocs/diary.ttl
cat $BASEDIR/var/output/* | $RAPPER -e -q -i turtle - -I null -o rdfxml -O http://id.southampton.ac.uk/ > $BASEDIR/htdocs/diary.rdf

# Legacy ntriples output.  TODO remove this once data.southampton.ac.uk is amended to read turtle version.
cat $BASEDIR/var/output/* | $RAPPER -e -q -i turtle - -I null > $BASEDIR/htdocs/diary.nt

# Freeze the graph.
php createFrozenGraph.phpb

php $BASEDIR/htdocs-soton/index-gen.php > $BASEDIR/htdocs-soton/index.html

cd htdocs
php prov.html.php > feeds.html
